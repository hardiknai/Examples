<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
		 <changeSet id="070" author="Hardik Nai">
		
		<createTable tableName="user"
			remarks="A table to contain all the user">
			<column name="id" type="bigint">
				<constraints primaryKey="true" primaryKeyName="pk_user_id" />
			</column>
			<column name="email" type="varchar(50)">
			</column>
			<column name="first_name" type="varchar(25)">
			</column>
			<column name="last_name" type="varchar(25)">
			</column>
			<column name="password" type="varchar(255)">
			</column>
		</createTable>
	</changeSet>
	
	<changeSet id="071" author="Hardik Nai">
		<loadUpdateData encoding="UTF-8" file="db/changelog/data/user.csv"
			primaryKey="pk_user_id" separator="," tableName="user" />
	</changeSet>
</databaseChangeLog>