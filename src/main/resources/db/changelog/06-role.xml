<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	<changeSet id="060" author="Hardik Nai">

		<createTable tableName="role"
			remarks="A table to contain all the user">
			<column name="id" type="bigint">
				<constraints primaryKey="true"
					primaryKeyName="pk_user_id" />
			</column>
			<column name="name" type="varchar(25)">
			</column>
		</createTable>
	</changeSet>
	<changeSet id="061" author="Hardik Nai">
		<loadUpdateData encoding="UTF-8"
			file="db/changelog/data/role.csv" primaryKey="pk_role_id"
			separator="," tableName="role" />
	</changeSet>
</databaseChangeLog>