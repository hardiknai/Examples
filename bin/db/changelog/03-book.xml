<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="030" author="Hardik Nai">
		<createTable tableName="book"
			remarks="A table to contain all books">
			<column name="id" type="bigint">
				<constraints primaryKey="true"
					primaryKeyName="pk_book_id" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="author_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="031" author="Hardik Nai">
		<loadUpdateData encoding="UTF-8"
			file="db/changelog/data/book.csv" primaryKey="pk_book_id"
			separator="," tableName="book" />
	</changeSet>
	<changeSet id="032" author="Hardik Nai">
		<insert tableName="book">
			<column name="name" value="Java" />
			<column name="author_id" valueNumeric="11" />
		</insert>
		<insert tableName="book">
			<column name="name" value="QA" />
			<column name="author_id" valueNumeric="12" />
		</insert>
		<insert tableName="book">
			<column name="name" value="UI" />
			<column name="author_id" valueNumeric="12" />
		</insert>
		<insert tableName="book">
			<column name="name" value="UX" />
			<column name="author_id" valueNumeric="14" />
		</insert>
	</changeSet>

</databaseChangeLog>