<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	<changeSet id="01" author="Hardik Nai">
		<createTable tableName="books" remarks="A table to contain all books">
			<column name="id" type="int">
				<constraints primaryKey="true" primaryKeyName="pk_book_id"/>
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="author_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>


		<createTable tableName="authors"
			remarks="A table to contain all the authors">
			<column name="id" type="int">
				<constraints primaryKey="true" primaryKeyName="pk_authors_id"/>
			</column>
			<column name="name " type="varchar(100)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint constraintName="fk_authors"
			referencedTableName="authors" baseColumnNames="author_id"
			baseTableName="books" referencedColumnNames="id" />


		<createTable tableName="student"
			remarks="A table to contain all the student">
			<column name="id" type="int">
				<constraints primaryKey="true" primaryKeyName="pk_student_id"/>
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" primaryKeyName="nn_student_name" />
			</column>
			<column name="male" type="varchar(6)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>